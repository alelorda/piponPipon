@model IEnumerable<Pipo_Pipon.Models.Comida>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <h2><b>COMIDAS</b></h2>

    <p>
        @Html.ActionLink("Agregar Comida", "Create")
    </p>
</center>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.comidaNombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.comidaPrecio)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.comidaNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.comidaPrecio)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.itemId }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.itemId }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.itemId })
            </td>
        </tr>
    }

</table>
