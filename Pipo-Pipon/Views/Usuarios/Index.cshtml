@model IEnumerable<Pipo_Pipon.Models.Usuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <h2><b>Gestionar Usuarios</b></h2>

    <p>
        @Html.ActionLink("Agregar Usuario", "Create")
    </p>
</center>
<table class="table">
    <tr>
        <th>
           Nombre de usuario: 
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.username)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_usuario }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_usuario }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_usuario })
        </td>
    </tr>
}

</table>
